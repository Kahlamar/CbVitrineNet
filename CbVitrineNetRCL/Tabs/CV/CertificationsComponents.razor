<RadzenCard title="Certifications">
    <RadzenStack Orientation="Orientation.Vertical" JustifyContent="JustifyContent.Start" Gap="1rem" class="rz-p-4">
        @if (certifications is not null)
        {
            @foreach (var certification in certifications)
            {
                <RadzenCard class="rz-background-color-primary-light rz-shadow-0 rz-border-radius-0 rz-p-8 rz-mx-auto" style="margin: 1rem calc(-1 * var(--rz-card-padding));">
                    <RadzenText TextStyle="TextStyle.Body1" class="fs-4 rz-color-on-primary-light"><b>@certification.OrganismeCertifiant</b></RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1" class="fs-4 rz-color-on-primary-light"><b>@certification.Titre</b></RadzenText>
                    @if (certification.DureeValiditeAnnees == 100)
                    {
                        <RadzenText TextStyle="TextStyle.H6" class="rz-color-on-primary-light"><strong>Valide Ã  vie</strong></RadzenText>
                    }
                    else
                    {
                        <RadzenText TextStyle="TextStyle.H6" class="rz-color-on-primary-light"><strong>Valide @certification.DureeValiditeAnnees ans</strong></RadzenText>
                    }

                </RadzenCard>
            }
        }
    </RadzenStack>
</RadzenCard>

