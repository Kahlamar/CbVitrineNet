<RadzenStack Orientation="Orientation.Horizontal">
    <RadzenCardGroup>
        <RadzenText TextStyle="TextStyle.Body1" class="fs-4"><b>Expériences</b></RadzenText>
        @if (Experiences is not null)
        {
            @foreach (var exp in Experiences)
            {
                <RadzenCard class="my-4 mx-4 rz-border-radius-2">
                    <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Start" Gap="1rem" class="rz-p-4">
                        <RadzenStack Gap="0">
                            <RadzenText TextStyle="TextStyle.Body1" class="fs-4"><b>@exp.Entreprise @exp.DateDebut.Split("-")[0] - @exp.DateFin.Split("-")[0]</b></RadzenText>
                            <RadzenText TextStyle="TextStyle.Body1" class="fs-4"><b>@exp.Poste</b></RadzenText>
                        </RadzenStack>
                    </RadzenStack>
                    <RadzenCard class="rz-background-color-primary-light rz-shadow-0 rz-border-radius-0 rz-p-8" style="margin: 1rem calc(-1 * var(--rz-card-padding));">
                        <RadzenText TextStyle="TextStyle.H6" class="rz-color-on-primary-light"><strong>Tâches effectuées</strong></RadzenText>
                        <RadzenRow RowGap="0">
                            <RadzenColumn SizeMD="12">
                                @foreach (var tache in exp.TachesEffectuees)
                                {
                                    <RadzenText TextStyle="TextStyle.Overline" class="rz-color-on-primary-light rz-display-flex rz-mt-4 rz-mb-0">@tache</RadzenText>
                                }
                            </RadzenColumn>
                        </RadzenRow>
                    </RadzenCard>
                </RadzenCard>
            }
        }
    </RadzenCardGroup>
</RadzenStack>