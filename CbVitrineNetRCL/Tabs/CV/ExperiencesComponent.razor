<RadzenStack Orientation="Orientation.Horizontal">
    <RadzenCardGroup>
        <RadzenText TextStyle="TextStyle.Body1" class="fs-4"><b>Expériences</b></RadzenText>
        @if (experiences is not null)
        {
            @foreach (var exp in experiences)
            {
                <RadzenCard class="rz-background-color-primary-light rz-shadow-0 rz-border-radius-0 rz-p-8 rz-mx-auto" style="margin: 1rem calc(-1 * var(--rz-card-padding));">
                    <RadzenText TextStyle="TextStyle.Body1" class="fs-4 rz-color-on-primary-light"><b>@exp.Entreprise @exp.DateDebut.Split("-")[0] / @exp.DateFin.Split("-")[0]</b></RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1" class="fs-4 rz-color-on-primary-light"><b>@exp.Poste</b></RadzenText>
                    <RadzenText TextStyle="TextStyle.H6" class="rz-color-on-primary-light"><strong>Tâches effectuées</strong></RadzenText>
                    <RadzenRow RowGap="0">
                        <RadzenColumn SizeSM="12">
                            @foreach (var tache in exp.TachesEffectuees)
                            {
                                <RadzenText TextStyle="TextStyle.Overline" class="rz-color-on-primary-light rz-display-flex rz-mt-4 rz-mb-0">@tache</RadzenText>
                            }
                        </RadzenColumn>
                    </RadzenRow>
                </RadzenCard>
            }
        }
    </RadzenCardGroup>
</RadzenStack>


