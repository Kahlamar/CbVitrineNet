    <form style="width: 100%; max-width: 500px;">
        <div style="width: 100%; margin-bottom: 15px;">
            <label for="nom">Nom</label><br>
            <input type="text" id="nom" name="nom" placeholder="Nom" style="width: 100%; padding: 8px;" />
        </div>

        <div style="width: 100%; margin-bottom: 15px;">
            <label for="prenom">Prénom</label><br>
            <input type="text" id="prenom" name="prenom" placeholder="Prénom" style="width: 100%; padding: 8px;" />
        </div>

        <div style="width: 100%; margin-bottom: 15px;">
            <label for="email">Email</label><br>
            <input type="email" id="email" name="email" placeholder="Email" style="width: 100%; padding: 8px;" required />
        </div>

        <div style="width: 100%; margin-bottom: 15px;">
            <label for="motdepasse">Mot de passe</label><br>
            <input type="password" id="motdepasse" name="motdepasse" placeholder="Mot de Passe" style="width: 100%; padding: 8px;" />
        </div>

        <div style="width: 100%; margin-bottom: 15px;">
            <label for="confirmationMotdepasse">Confirmation Mot de Passe</label><br>
            <input type="password" id="confirmationMotdepasse" name="confirmationMotdepasse" placeholder="Mot de Passe Confirmation" style="width: 100%; padding: 8px;" />
        </div>
        <RadzenButton ButtonType="ButtonType.Submit" Text="Submit" class="rz-mx-auto"></RadzenButton>
    </form>
</RadzenStack>

@if (UserStory is not null)
{
    <RadzenStack Orientation="Orientation.Vertical" class="rz-mx-auto rz-my-12">
        <RadzenText TextStyle="TextStyle.Body1" class="fs-4"><b>User Story</b></RadzenText>

        <RadzenCard class="rz-mx-auto">
            <table class="table table-striped-columns">
                <thead>
                    <tr>
                        <th scope="col">Nom de l'US</th>
                        <th scope="col">Risque</th>
                        <th scope="col">Priorité</th>
                        <th scope="col">Environnement</th>
                        <th scope="col">Branche à utiliser</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@UserStory.NomUs</td>
                        <td>@UserStory.Risque</td>
                        <td>@UserStory.Priorite</td>
                        <td>@UserStory.Environnement</td>
                        <td>@UserStory.Branche</td>
                    </tr>
                </tbody>
            </table>

            <p>@UserStory.DescriptionDetaillee</p>


            <RadzenText TextStyle="TextStyle.Body1" class="rz-my-6"><b>Test Case Valide</b></RadzenText>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Id Test Case</th>
                        <th scope="col">Prérequis</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td scope="row">@UserStory.TestCaseValide._id</td>
                        <td scope="row">@UserStory.TestCaseValide.Prerequis</td>
                    </tr>
                </tbody>
            </table>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Numéro Étape</th>
                        <th scope="col">Action</th>
                        <th scope="col">Résultat attendu</th>
                        <th scope="col">Résultat obtenu</th>
                        <th scope="col">Pass/Fail</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var etapeTestCase in UserStory.TestCaseValide.EtapesTestCase)
                    {
                        <tr>
                            <td>@etapeTestCase._id</td>
                            <td>@etapeTestCase.Action</td>
                            <td>@etapeTestCase.ResultatAttendu</td>
                            <td>@etapeTestCase.ResultatObtenu</td>
                            <td>@etapeTestCase.PassFail</td>
                        </tr>
                    }
                </tbody>
            </table>

        </RadzenCard>
    </RadzenStack>
}


