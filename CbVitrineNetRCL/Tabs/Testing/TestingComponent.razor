    <RadzenText TextStyle="TextStyle.Body1" class="fs-4"><b>Sonarqube</b></RadzenText>
    <RadzenCard class="rz-my-12 rz-mx-auto">
        <RadzenCard class="rz-shadow-0 rz-border-radius-0 rz-p-8" style="margin: 1rem calc(-1 * var(--rz-card-padding));">
            <RadzenImage Path="images/Sonar.png" class="rz-mb-2" />
        </RadzenCard>
    </RadzenCard>
